{
  "name": "Python & Jupyter",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "features": {
    "ghcr.io/devcontainers/features/python-poetry:1": {}
  },
  "postCreateCommand": "pip install jupyter pandas matplotlib scikit-learn seaborn",
  "customizations": {
    "vscode": {
      "extensions": ["ms-toolsai.jupyter", "ms-python.python"]
    }
  }
}
{
  "name": "R DevContainer",
  "image": "rocker/rstudio:latest",
  "postCreateCommand": "R -e \"install.packages(c('ggplot2', 'dplyr', 'tidyverse'), repos='http://cran.rstudio.com/')\"",
  "customizations": {
    "vscode": {
      "extensions": ["Ikuyadeu.r"]
    }
  },
  "forwardPorts": [8787]
}
